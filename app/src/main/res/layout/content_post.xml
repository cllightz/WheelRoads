<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_detail_margin"
    android:paddingLeft="@dimen/activity_detail_margin"
    android:paddingRight="@dimen/activity_detail_margin"
    android:paddingTop="@dimen/activity_detail_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PostActivity"
    tools:showIn="@layout/activity_post">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一言コメント"/>

        <EditText
            android:id="@+id/comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"/>

        <!--
        <View
            android:layout_width="wrap_content"
            android:background="#FF7F7F7F"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COMMENT LANGUAGE"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="English"
                android:id="@+id/en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:text="Japanese"
                android:id="@+id/ja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>
        -->

        <View
            android:layout_width="wrap_content"
            android:background="#FF7F7F7F"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="アクセシビリティの程度"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="付き添いなしでも快適に通行可"
                android:id="@+id/level0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:text="付き添いなしでは労力を要する"
                android:id="@+id/level1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:text="付き添いが必要"
                android:id="@+id/level2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <RadioButton
                android:text="通行不能"
                android:id="@+id/level3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RadioGroup>

        <View
            android:layout_width="wrap_content"
            android:background="#FF7F7F7F"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="アクセシビリティを低下させる原因"/>

        <CheckBox
            android:text="階段"
            android:id="@+id/steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:text="段差"
            android:id="@+id/difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:text="急な坂・スロープ"
            android:id="@+id/steep"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:text="路面 (凹凸, 泥道, 砂道, 砂利道 等)"
            android:id="@+id/rough"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:text="狭い幅員"
            android:id="@+id/narrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:text="横方向の傾斜"
            android:id="@+id/cant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <CheckBox
            android:text="障害物により塞がれている (放置自転車, ごみ 等)"
            android:id="@+id/bikes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="wrap_content"
            android:background="#FF7F7F7F"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!--
            <Button
                android:id="@+id/choose_picture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHOOSE PICTURE"/>
             -->

            <Button
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="投稿"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>